{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "preserve",
		"lib": ["ESNext", "DOM"],
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"types": ["vite-plugin-electron/electron-env", "node"],
		"strict": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@unml/core": ["./packages/core/src/index.ts"],
			"@unml/extensions": ["./packages/extensions/src/index.ts"],
			"@unml/schema": ["./packages/schema/src/index.ts"],
			"@unml/kit": ["./packages/kit/src/index.ts"],
			"@unml/client": ["./packages/client/src/index.ts"],
			"@unml/constants": ["./packages/constants/src/index.ts"],
			"@unml/utils/client": ["./packages/utils/src/client.ts"],
			"@unml/utils": ["./packages/utils/src/index.ts"]
		}
	},
	"include": ["./*.ts", "./src/**/*", "./src-electron/**/*", "./packages/**/*"]
}
