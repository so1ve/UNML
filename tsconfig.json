{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@": ["./src"],
      "@unml/kit": ["./packages/kit/src/index.ts"],
      "@unml/core": ["./packages/core/src/index.ts"],
      "@unml/schema": ["./packages/schema/src/index.ts"]
    }
  }
}
